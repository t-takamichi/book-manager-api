[mysqld]
# Use utf8mb4 as the default character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
skip-character-set-client-handshake = 1
innodb_default_row_format = dynamic

# Primary server settings for replication
server-id = 1
log_bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
